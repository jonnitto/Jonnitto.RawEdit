prototype(Raw:Area) < prototype(Fusion:Tag) {
	attributes.class = 'column neos-raw-content-contentcollection-container'
	header = ''

	prototype(Raw:Content) {
		header = false
		content.header.attributes.style = 'font-size:100%;margin:20px 0 10px;'
	}

	@context.header = ${this.header}
	content = Fusion:Array {
		header = Fusion:Tag {
			@position = 'start 1'
			tagName = 'header'
			content = ${header}
		}
	}
}
